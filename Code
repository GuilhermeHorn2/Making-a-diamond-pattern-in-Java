package project1;

import java.util.Scanner;

public class demo2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
	   //creating a diamond pattern in java
		System.out.println("Inout an integer:");
		Scanner sc = new Scanner(System.in);  
		String scnd = sc.next();
		int max = Integer.parseInt(scnd);
		int d = (max * 2) - 1;
		String v = "";
		int j = 1;
		for(int i = 0; i < d;i++) {
			if(i < max) {
				v += "*";
				System.out.println(v);
			}
			else {
				System.out.println(v.substring(0,max-j));
				j++;
			}
			
		}
       
		
	    
	    
	    
	    
		

	}


}
